{{>layout/header}}

<h1>섹션 이름 변경</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <input type="text" id="section-id" readonly="readonly" value="{{currentSection.id}}" hidden="hidden">

        <form>
            <div class="form-group">
                <label for="name">이름</label>
                <input type="text" class="form-control" id="name" placeholder="섹션 이름" value="{{currentSection.name}}">
            </div>
        </form>

        <button type="button" class="btn btn-danger" id="btn-section-delete">섹션 삭제</button>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-section-update">저장</button>
    </div>
</div>

{{>layout/footer}}